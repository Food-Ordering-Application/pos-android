<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="80dp"
    android:paddingEnd="10dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_product">
        <LinearLayout
            android:id="@+id/cardPromotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_product"
            android:orientation="horizontal"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:id="@+id/promotionCode"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC#123"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/promotionRest"
                    android:text="100 luot"
                    android:textSize="12sp"
                    android:textColor="@color/green"
                    android:layout_above="@+id/promotionExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/promotionExp"
                    android:text="20/12/2021"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/contentBadgeTitle"/>

            <TextView
                android:id="@+id/promotionDesc"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Promotion desc ..."
                android:padding="4dp"
                android:textSize="12sp"
                android:textStyle="italic"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>