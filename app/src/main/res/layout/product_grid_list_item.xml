<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    
     <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
         android:layout_alignParentTop="true"
         android:layout_alignParentBottom="true"
        android:src="@drawable/ic_noimage_square" />
    
    <TextView
        android:id="@+id/tvCartProductName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|start"
        android:layout_alignParentBottom="true"
       android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:text="Tên món ăn"
        android:textStyle="bold"

        android:layout_toStartOf="@+id/tvProductPrice"
        android:layout_toEndOf="@+id/imageView1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvProductPrice"
        android:gravity="center_vertical|end"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
      	android:layout_marginEnd="8dp"
      	android:layout_marginTop="5dp"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:text="10.000 đồng" />


    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/item_transparan2" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_grid_checked" />

    </RelativeLayout>
</RelativeLayout>

</androidx.cardview.widget.CardView>
