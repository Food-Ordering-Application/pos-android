<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/primaryColor"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_bar"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/cashierImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/cashier_image_default" />

    <TextView
        android:id="@+id/cashierName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cashierImage"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:gravity="bottom"
        android:text="Thu ngân"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <Button
        android:id="@+id/manualSyncButton"
        android:text="Đồng bộ"
        android:layout_alignParentEnd="true"

        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/secondaryColor"
        android:drawableEnd="@drawable/ic_baseline_sync_24"
        />
 />
</RelativeLayout>